{
    "name": "ptnghia/laravel-tiptap-editor",
    "description": "A Laravel package providing a Tiptap-based rich text editor with Bootstrap 5 layout, media management, and AI content generation",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "ptnghia",
            "email": "ptnghia@gmail.com",
            "homepage": "https://github.com/ptnghia",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/contracts": "^11.0|^12.0",
        "illuminate/database": "^11.0|^12.0",
        "illuminate/http": "^11.0|^12.0",
        "illuminate/routing": "^11.0|^12.0",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/view": "^11.0|^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "orchestra/testbench": "^9.0|^10.0",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": "^11.0"
    },
    "suggest": {
        "guzzlehttp/guzzle": "Required for AI content generation (Claude API)",
        "intervention/image": "Required for image processing (resize, WebP conversion)",
        "openai-php/laravel": "Required for AI content generation (OpenAI API)"
    },
    "autoload": {
        "psr-4": {
            "Suspended\\TiptapEditor\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Suspended\\TiptapEditor\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Suspended\\TiptapEditor\\EditorServiceProvider"
            ],
            "aliases": {
                "TiptapEditor": "Suspended\\TiptapEditor\\Facades\\TiptapEditor"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "lint": "pint",
        "analyse": "phpstan analyse src --memory-limit=256M"
    }
}
